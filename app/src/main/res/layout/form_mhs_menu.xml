<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Form_Mhs_Menu">

    <LinearLayout
        android:id="@+id/LLMenu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImageUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_account_circle_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NamaUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout="@+id/ImageUser"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Togan Jagat Raya"
                    android:textColor="#FFF"
                    android:textSize="20dp"
                    android:padding="7dp"
                    app:fontFamily="sans-serif-medium"
                    android:background="@drawable/rounded_squaredark"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:id="@+id/NIUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NamaUser"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout="@+id/ImageUser"
                    android:layout_gravity="center"
                    android:text="155150207111193"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp"
                    app:fontFamily="sans-serif-medium" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@color/colorPrimaryDark" />
        <TextView
            android:id="@+id/peringatan_F0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:text="IPK atau SKS Anda pada semester sebelumnya termasuk kategori kurang/kritis\nAnda wajib melakukan konseling pada dosen PA anda"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:background="@drawable/rounded_sqrred"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/peringatandosen_F0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:text="IPK atau SKS Mahasiswa ini pada semester sebelumnya termasuk kategori kurang/kritis\nAnda wajib melakukan konseling dengan mahasiswa ini"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:background="@drawable/rounded_sqrred"
            android:visibility="gone"
            />

    </LinearLayout>

    <ScrollView
        android:id="@+id/RLMenu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LLMenu1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/Btn_F0"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="FORM JSI-PA-00 BIODATA"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_squaredark"
                />

            <Button
                android:id="@+id/Btn_F1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="FORM JSI-PA-01 MILESTONE"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_squaredark"
                android:layout_below="@+id/Btn_F0"
                />
            <Button
                android:id="@+id/Btn_F2"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="FORM JSI-PA-02 RANCANGAN KULIAH"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_squaredark"
                android:layout_below="@id/Btn_F1"
                />
            <Button
                android:id="@+id/Btn_F3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="FORM JSI-PA-03 PORTOFOLIO"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_squaredark"
                android:layout_below="@id/Btn_F2"
                />
            <Button
                android:id="@+id/Btn_F4"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="FORM JSI-PA-04 PEMANTAUAN"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_squaredark"
                android:layout_below="@id/Btn_F3"
                />
            <Button
                android:id="@+id/Btn_F5"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="40dp"
                android:text="FORM JSI-PA-05 LOGBOOK"
                android:textColor="#FFFF"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rounded_squaredark"
                android:layout_below="@id/Btn_F4"
                />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>

